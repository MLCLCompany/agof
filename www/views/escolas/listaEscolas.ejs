<table id="listaEscolas" class="table table-striped table-hover dataTable">
    <thead>
        <tr>
            <th>Sigla</th>
            <th>Nome</th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i = 0;i < data.length;i++) { %>
        <tr>
            <td><%=data[i].escola_sigla %></td>
            <td><%=data[i].escola_nome %></td>
            <td><span onclick="show('<%=data[i].escola_id %>');" class="btn btn-primary"><i class="ti-eye"></i></span>
        </tr>                                                
            <% } %>
    </tbody>
</table>

<script>

var table = $('#listaEscolas').DataTable( {
    dom: 'Bfrtip',
    "autoWidth": false,
    "language": {
        "search": "Procurar:",
        "zeroRecords": "Não há registos",
        "info": "Mostrar página _PAGE_ de _PAGES_",
        "infoEmpty": "Não há registos",
        "infoFiltered": "(filtrado de _MAX_ registos)",
        "paginate": {
            "previous": "Anterior",
            "next": "Próxima",
            "first": "Primeira",
            "last": "Última"
        }
    }
} );
</script>